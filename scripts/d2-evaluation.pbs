#!/bin/bash -l
#PBS -l walltime=4:00:00,nodes=50:ppn=8,pmem=2500mb
#PBS -m abe
#PBS -M harwe006@umn.edu

################################################################################
# Setup Simulation Environment                                                 #
################################################################################

# Initialize modules
source /home/gini/shared/swarm/bin/build-env-setup.sh

# Set ARGoS library search path. Must contain both the ARGoS core libraries path
# AND the fordyca library path.
export ARGOS_PLUGIN_PATH=$ARGOS_PLUGIN_PATH:$HOME/git/fordyca/build/lib

# Setup logging (maybe compiled out and unneeded, but maybe not)
export LOG4CXX_CONFIGURATION=$HOME/git/fordyca/log4cxx.xml

# From MSI docs: transfers all of the loaded modules to the compute nodes (not
# inherited from the master/launch node when using GNU parallel)
export PARALLEL="--workdir . --env PATH --env LD_LIBRARY_PATH --env
LOADEDMODULES --env _LMFILES_ --env MODULE_VERSION --env MODULEPATH --env
MODULEVERSION_STACK --env MODULESHOME --env OMP_DYNAMICS --env
OMP_MAX_ACTIVE_LEVELS --env OMP_NESTED --env OMP_NUM_THREADS --env
OMP_SCHEDULE --env OMP_STACKSIZE --env OMP_THREAD_LIMIT --env OMP_WAIT_POLICY
--env ARGOS_PLUGIN_PATH --env LOG4CXX_CONFIGURATION"

################################################################################
# Begin Experiments                                                            #
################################################################################
NSIMS=4
DIST_TYPES=(SS DS QS RN)
CONTROLLERS=(depth0.CRW depth0.DPO depth1.GP_DPO depth1.GP_ODPO depth2.GRP_DPO depth2.GRP_ODPO)
OUTPUT_ROOT=$HOME/exp/test
BASE_CMD="python3 sierra.py \
                  --template-config-file=$HOME/git/sierra/templates/ideal.argos \
                  --n-sims=$NSIMS\
                  --n-physics-engines=4
                  --n-threads=4
                  --exec-method=local\
                  --time-setup=time_setup.T10000\
                  --perf-measures=sc,so,sp"

cd $HOME/git/sierra

# GO GO Power Rangers!
for c in "${CONTROLLERS[@]}"
do
    for dist in "${DIST_TYPES[@]}"
    do
        $BASE_CMD --generator=${c}.${dist}12x6 --batch-criteria=swarm_size.Log128 --n-blocks=10 --sierra-root=$OUTPUT_ROOT/b10
        $BASE_CMD --generator=${c}.${dist}12x6 --batch-criteria=swarm_size.Log128 --n-blocks=20 --sierra-root=$OUTPUT_ROOT/b20
        $BASE_CMD --generator=${c}.${dist}12x6 --batch-criteria=swarm_size.Log128 --n-blocks=40 --sierra-root=$OUTPUT_ROOT/b40
        $BASE_CMD --generator=${c}.${dist}24x12 --batch-criteria=swarm_size.Log128 --n-blocks=30 --sierra-root=$OUTPUT_ROOT/b10
        $BASE_CMD --generator=${c}.${dist}24x12 --batch-criteria=swarm_size.Log128 --n-blocks=60 --sierra-root=$OUTPUT_ROOT/b20
        $BASE_CMD --generator=${c}.${dist}24x12 --batch-criteria=swarm_size.Log128 --n-blocks=120 --sierra-root=$OUTPUT_ROOT/b40
    done;
done;

# Generate comparison graphs (a valid batch criteria still needed to correctly
# generate graph labels)
$BASE_CMD --generator=depth1.GP_DPO.SS12x6\
          --batch-criteria=swarm_size.Log128\
          --sierra-root=$OUTPUT_ROOT/b10\
          --pipeline 5

$BASE_CMD --generator=depth1.GP_DPO.SS12x6\
          --batch-criteria=swarm_size.Log128\
          --sierra-root=$OUTPUT_ROOT/b20\
          --pipeline 5

$BASE_CMD --generator=depth1.GP_DPO.SS12x6\
          --batch-criteria=swarm_size.Log128\
          --sierra-root=$OUTPUT_ROOT/b40\
          --pipeline 5
